{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["es2019", "DOM"],
    "strict": false,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "removeComments": true
  },
  "include": ["src/**/*"]
}
